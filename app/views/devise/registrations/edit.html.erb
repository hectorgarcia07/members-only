<div class="d-flex flex-row justify-content-center">
  <h2>Edit Your Profile</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
html: { class: 'd-flex flex-column justify-content-center', method: :put }) do |f| %>
  <div class="d-flex flex-column align-items-center">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

  <div class="d-flex flex-column align-items-center">
    <div class="d-flex flex-column">
      <div class="d-flex flex-column spacing">
        <%= f.label :username %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username"%>
      </div>

      <div class="d-flex flex-column spacing">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="d-flex flex-column spacing">
        <div class="d-flex flex-row align-items-center">
          <%= f.label :password %> &nbsp; <i class="fa fa-info-circle" data-toggle="tooltip" 
          data-placement="right" title="Leave blank if you don't want to change it."></i> 
          <% if @minimum_password_length %>
            <em>&nbsp;<%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="d-flex flex-column spacing">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="d-flex flex-column spacing">
        <div class="d-flex flex-row  align-items-center"> 
          <%= f.label :current_password %> &nbsp; <i class="fa fa-info-circle" data-toggle="tooltip" 
          data-placement="right" title="We need your current password to confirm your changes."></i> 
        </div>
          <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="d-flex flex-row justify-content-center">
        <%= f.submit "Update", class: "spacing" %>
      </div>
    </div>
  </div>
<% end %>

<hr>

<div class="d-flex flex-column align-items-center">
  <h2>Your Profile Picture</h2>
  <%= gravatar_for current_user %>
  <a href="https://gravatar.com/emails" target="_blank">Change</a>
</div>

<hr>

<div class="d-flex flex-row justify-content-center">
  <h2>Cancel my account</h2>
</div>

<hr>

<div class="d-flex flex-row justify-content-center">
  <div class="d-flex flex-column spacing align-items-center">
    <p>Unhappy? </p>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
  </div>
</div>

<div class="d-flex flex-row justify-content-center">
  <%= link_to "Back", :back %>
</div>
