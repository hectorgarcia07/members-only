<div class="container d-flex flex-row post-border">
    <div class="d-flex flex-column col-11">
        <div class="d-flex flex-row line-break" style="padding-left: 5px">
            <div class="d-flex flex-column justify-content-center" style="margin-right: 5px;">
                <%= gravatar_for(post.user_id)%>
            </div>
            <div class="d-flex flex-column justify-content-center">
                <%= get_username(post.user_id)%>
            </div>
            <div class="d-flex flex-column justify-content-center ml-auto" style="margin-right: 5px;">
                <%= post.updated_at.strftime("%d %b %Y at %I:%M %p") %>
            </div>
        </div>
        <div class="d-flex flex-row" style="padding-left: 5px">
            <%= "#{post.post}" %>
        </div>
    </div>
    <% if user_signed_in? && is_post_owner?(post.user_id) %>
        <div class="d-flex flex-column justify-content-center align-items-center icon-border">
            <%= link_to edit_post_path(post) do %>
                <i class="fa fa-pencil-square-o" style="font-size:32px" 
                data-toggle="tooltip" data-placement="right" title="Edit this post."></i>
            <% end %>
        </div>
        <div class="d-flex flex-column justify-content-center align-items-center icon-border">
            <%= link_to post_path(post), :method => 'delete' do %>
                <i class="fa fa-trash-o" style="font-size:32px" data-toggle="tooltip" 
                data-placement="right" title="Delete this post."></i>
            <% end %>
        </div>
    <% end %>
</div>
